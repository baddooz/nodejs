<!doctype html>
<html>
<head>
    <title>View Blog</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">
    <div class="col-sm-6 col-sm-offset-3">
    
    <h1><span class="fa fa-sign-in"></span><%= blogname %>  </h1>
    
    <div class="page-header">

                <ul>
                      <li><h6>  <a class="btn" href="/blog/<%= blogpost.blogname %>"> <%= blogpost.blogname %> </a> </h6>
                       <hr>
                        <p>  <%= blogpost.blogdescription %> </p>
                       <% if (blogpost.image && blogpost.image.data.length > 0) {  %>
                               <img src="<%= image %>" style="height: 400px; width:400px"/>
                            <% } %>
                        <h5>
                        Comments
                        </h5>
                         <% for(var j=blogpost.comments.length-1; j>=0; j--) {  %>
                             <span><%= blogpost.comments[j].comment %></span> <br>
                             <span>  <%= blogpost.comments[j].user %> </span> <br>
                            <span>  <%= blogpost.comments[j].created_at %> </span> <hr>
                         <%}%>    
                       
                       
                       <h5>Add New Comment </h5>
                            <form  action="/addComment/<%= blogpost._id %>" method="post" >
                                <!-- <textarea class="form-control" rows="3" id="comment"></textarea> -->
                                  <input type="textarea" class="form-control" name="comment" value="">
                                 <button type="submit" class="btn btn-warning btn-sm" name="postComment" > Save</button>
                            </form>
                            <hr>
                           
                       </li>
                </ul>

    </div>


</div>

</body>
</html>